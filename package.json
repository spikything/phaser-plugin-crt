{
  "name": "phaser-plugin-crt",
  "version": "0.1.1",
  "description": "A lightweight CRT PostFX Scene Plugin for Phaser 3 (WebGL-only, Canvas-safe no-op).",
  "type": "module",
  "main": "dist/phaser-plugin-crt.umd.js",
  "module": "dist/phaser-plugin-crt.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/phaser-plugin-crt.esm.js",
      "require": "./dist/phaser-plugin-crt.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "test": "npm run build-tests && node test/run-tests.cjs",
    "build-tests": "tsc -p tsconfig.test.json && node test/setup-tests.cjs"
  },
  "peerDependencies": {
    "phaser": ">=3.55.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "phaser": "^3.80.0",
    "rollup": "^4.22.0",
    "tslib": "file:vendor/tslib",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "phaser",
    "phaser3",
    "plugin",
    "postfx",
    "crt",
    "shader",
    "webgl"
  ],
  "license": "MIT",
  "author": "Spikything"
}
